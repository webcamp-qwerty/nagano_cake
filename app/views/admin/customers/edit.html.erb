<div class="container">
  <div class="row">
    <div class="ccol-lg-11 offset-lg-1">
      <br>
      <h3><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h3>
      <%= form_with model:@customer, url:admin_customer_path, local:true do |f| %>
      <table class="customer_table">
        <tr>
          <th class="customer_edit_th">会員ID</th>
            <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th class="customer_edit_th">氏名</th>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th class="customer_edit_th">フリガナ</th>
            <td> <%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th class="customer_edit_th">郵便番号</th>
            <td><%= f.text_field :postcode %></td>
        </tr>
        <tr>
          <th class="customer_edit_th">住所</th>
            <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th class="customer_edit_th">電話番号</th>
            <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <th class="customer_edit_th">メールアドレス</th>
            <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th class="customer_edit_th">会員ステータス</th>
            <td>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '有効' %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会' %>
            </td>
      </table>

      <span>
        <%= f.submit "編集内容を保存",class: "btn btn-sm btn-success" %>
      </span>

      <% end %>
    <br>
    </div>
  </div>
</div>