<h1>商品一覧</h1>
<%= link_to "新規商品", new_admin_item_path %>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item) do %>
            <%= item.name %>
          <% end %>
        </td>
        <td><%= item.excluded_price %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active ? '販売中' : '売り切れ' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>