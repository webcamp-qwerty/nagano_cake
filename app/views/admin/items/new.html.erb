<h1>商品新規登録</h1>
<%= form_with model:@item, url: admin_items_path, local:true do |f| %>
  <h4>商品画像</h4>
　<%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduct %>
  <h4>ジャンル</h4>
  <%= collection_select(:genre, :name, @genres, :id, :name) %>
  <h4>税抜価格</h4>
  <%= f.text_field :excluded_price %>円
  <h4>販売ステータス</h4>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, '販売中', value: true %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, '販売停止中', value: false %>
  <%= f.submit "新規登録" %>
<% end %>