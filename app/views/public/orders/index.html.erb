<h3>注文履歴一覧</h3>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
   <% @orders.each do |order| %>
    <tr>
     <td>
        <%= order.created_at.to_s(:datetime_jp) %>
     </td>
     <td>
       〒<%= order.postcode %><br>
       <%= order.address %><br>
       <%= order.name %>
     </td>
       <td>
         <% order.items.each do |item| %>
           <%= item.name %><br>
         <% end %>
       </td>
     <td><%= order.payment.to_s(:delimited)  %></td>
     <td><%= order.order_status_i18n %></td>
     <td><%= link_to "表示する", order_path(order) %></td>
    </tr>
  <% end %>
  <%= paginate @orders %>
  </tbody>
</table>