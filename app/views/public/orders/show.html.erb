<div class="container">
    <div class="row w-15">
      <div class="col-lg-2">
<div class="heading">
<h5 style="background-color:#cccccc">注文履歴詳細</h3>
</div>
</div>
</div>

    <div class="row">
         <div class="col-lg-7 ">
<h6>注文情報</h6>
<table class="order_info" border="1" style="border-collapse: collapse">
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>〒<%= @order.postcode %><br>
       <%= @order.address %><br>
       <%= @order.name %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%=@order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%=@order.order_status_i18n %></td>
  </tr>
</table>
</div>




  <div class="col-lg-3">
<h6 >請求情報</h6>
<table class="billing_info" border="1" style="border-collapse: collapse">
  <tr>
    <th>商品合計</th>
    <% @payment = @order.payment - @order.delivery_charge %>
    <th><%= @payment.to_s(:delimited) %></th>
  </tr>
  <tr>
    <th>配送料</th>
    <th><%= @order.delivery_charge %></th>
  </tr>
  <tr>
    <th>ご請求額</th>
    <th><%= @order.payment.to_s(:delimited) %></th>
  </tr>
</table>
</div>
</div>

<div class="row">
  <div class="col-lg-12">

<h6 class="order_info_h">注文内容</h6>
<table class="order_contents" border="1" style="border-collapse: collapse">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <% @order.order_items.each do |items| %>
  <tbody>
    <tr>
     <td><%= items.item.name  %></td>
     <td><%= items.purchase_price %></td>
     <td><%= items.item_count %></td>
     <% @price = items.purchase_price*items.item_count %>
     <td><%= @price.to_s(:delimited) %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>
