<% if @address.errors.any? %>
  <h3 style="color: red"><%= @address.errors.count %>error prohibited this book from being saved:</h3>
  <div id="error_explanation">
    <ul style="color: red">
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h3>配送先編集</h3>
<%= form_with model:@address, local: true do |t| %>
<label>郵便番号（ハイフンなし）</label><br>
<%= t.text_field :postcode, class: 'form-control' %><br>
<label>住所</label><br>
<%= t.text_field :address, class: 'form-control' %><br>
<label>宛名</label><br>
<%= t.text_field :name, class: 'form-control' %><br>
<%= t.submit '変更内容を保存',class:'btn btn-success' %>
<% end %>
    	