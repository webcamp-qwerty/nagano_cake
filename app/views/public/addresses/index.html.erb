<% if @address.errors.any? %>
  <h3 style="color: red"><%= @address.errors.count %>error prohibited this book from being saved:</h3>
  <div id="error_explanation">
    <ul style="color: red">
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h3>配送先登録/一覧</h3>
<%= form_with model: @address, url: addresses_path, local:true do |f| %>
  <div>
    <label>郵便番号（ハイフンなし）</label>
    <%= f.text_field :postcode %>
  </div>
  <div>
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div>
    <label>宛名</label>
    <%= f.text_field :name %>
  </div>
    <%= f.submit '新規登録' %>
  </div>
<% end %>

<table>
    <thead>
      <tr>
        <th>郵便番</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <% @addresses.each do |address| %>
    <tbody>
      <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address  %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address), class: 'btn btn-sm btn-success' %>
        </td>
        <td>
          <%= link_to "削除する", address_path(address), class: 'btn btn-sm btn-danger', method: :delete  %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>