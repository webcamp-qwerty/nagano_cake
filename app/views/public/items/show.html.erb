<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- ジャンル検索機能は検索機能を作成する際に同時作成　qwertyシートに参考url有り -->
<%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.png" %>
<%= @item.name %>
<%= @item.introduct %>
<%= @item.add_tax_price.to_s(:delimited) %>（税込）
<% if customer_signed_in? %>
  <%= form_with local: true, model:@cart_item do |f| %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.select :item_count, options_for_select((1..10).to_a, 1), include_blank: "個数選択" %>
    <%= f.submit "カートに入れる" %>
  <% end %>
<% end %>