<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- ジャンル検索機能は検索機能を作成する際に同時作成 qwertyシートに参考url有り -->
<h1>商品一覧</h1>
<table>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, :fill, 100, 60, format: 'jpeg', fallback: "no_image.png" %>
          <% end %>
        </td>
        <td><%= item.name %></td>
        <td>￥<%= item.add_tax_price.to_s(:delimited) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>